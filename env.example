# Database - Docker Compose format
# For Railway deployment, use PGDATABASE, PGUSER, PGPASSWORD, PGHOST, PGPORT instead
POSTGRES_DB=huds_db
POSTGRES_USER=huds_user
POSTGRES_PASSWORD=change_this_password
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Database - Railway format (automatically provided by Railway PostgreSQL service)
# PGDATABASE=${{Postgres.PGDATABASE}}
# PGUSER=${{Postgres.PGUSER}}
# PGPASSWORD=${{Postgres.PGPASSWORD}}
# PGHOST=${{Postgres.PGHOST}}
# PGPORT=${{Postgres.PGPORT}}

# Django
DJANGO_SECRET_KEY=change_this_to_a_random_secret_key
DJANGO_DEBUG=True
# For Railway: Add *.railway.app,*.up.railway.app to ALLOWED_HOSTS
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-5

# Redis (for Celery)
# For Docker Compose:
REDIS_URL=redis://redis:6379/0
# For Railway (automatically provided by Railway Redis service):
# REDIS_URL=${{Redis.REDIS_URL}}

# Timezone
TIME_ZONE=America/New_York
